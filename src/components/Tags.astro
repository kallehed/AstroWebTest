---

const {tags} = Astro.props;
---

<div class="tags">
    {tags.map((tag: unknown) =>
        <p class="pb-8 px-8 tag  animate-bounce transition hover:rotate-12 ease-in bg-amber-50 hover:bg-sky-300">
            <a href={`/tags/${tag}`}>{tag}</a>
        </p>
    )}
</div>

<style>
    a {
        color: #00539F;
    }
    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25rem;
        border: dotted 1px #a1a1a1;
        border-radius: .5em;
        padding: .5em 1em;
        font-size: 1.15em;

    }
</style>